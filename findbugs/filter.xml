<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
	<Match>
		<Source name="~(Manifest|R)\.java"/>
	</Match>

	<Match>
		<!--
			Instrumented tests have @Role-decorated fields that appear to
			FindBugs as unused because it doesn't see the test runner class.
		-->
		<Class name="~.*Test"/>
		<Bug pattern="URF_UNREAD_PUBLIC_OR_PROTECTED_FIELD"/>
	</Match>

	<Match>
		<!--
			A number of classes could be refactored. But as Android is built on
			Java 8, which doesn't support lambdas, these most often are just a
			replacement. It's not worth loosing this convenience.
		-->
		<Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON"/>
	</Match>

	<Match>
		<!--
			slf4j uses this field with dynamic binding to veryfy API version.
		-->
		<Field name="REQUESTED_API_VERSION"/>
		<Bug pattern="URF_UNREAD_PUBLIC_OR_PROTECTED_FIELD,MS_SHOULD_BE_FINAL"/>
	</Match>

	<Match>
		<!-- This is already checked by error-prone compiler -->
		<Bug pattern="RV_RETURN_VALUE_IGNORED"/>
	</Match>

	<Match>
		<!-- Doesn't play well with Butterknife -->
		<Bug pattern="BC_UNCONFIRMED_CAST_OF_RETURN_VALUE"/>
	</Match>

	<Match>
		<!-- Already found by compiler -->
		<Bug pattern="SE_NO_SERIALVERSIONID"/>
	</Match>
</FindBugsFilter>
